{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "jsx": "react",
    "module": "ESNext",
    "target": "esnext",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmit": true,
    "lib": ["dom", "esnext", "DOM.Iterable", "scripthost", "es2015"]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}

